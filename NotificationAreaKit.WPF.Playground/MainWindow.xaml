<Window
    x:Class="NotificationAreaKit.WPF.Playground.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NotificationAreaKit Playground"
    Width="800"
    Height="560"
    Closed="WindowClosed"
    Closing="WindowClosing"
    mc:Ignorable="d">

    <Window.Resources>

        <!--  A sample UserControl to demonstrate the hover feature  -->
        <UserControl x:Key="SampleHoverContent" x:Shared="False">
            <Border
                Padding="10"
                Background="#FF3E3E42"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Hover Content" />
                    <TextBlock
                        Margin="0,5,0,0"
                        Foreground="White"
                        Text="This is a custom WPF UserControl." />
                    <ProgressBar
                        Height="5"
                        Margin="0,10,0,0"
                        IsIndeterminate="True" />
                </StackPanel>
            </Border>
        </UserControl>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel: Controls  -->
        <StackPanel
            Grid.Column="0"
            Margin="0,0,10,0"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <GroupBox Header="Icon Management">
                <StackPanel>
                    <Button
                        Margin="5"
                        Padding="5"
                        Click="AddIconClick"
                        Content="Add New Tray Icon" />
                    <Button
                        Margin="5"
                        Padding="5"
                        Click="RemoveIconClick"
                        Content="Remove Last Tray Icon" />
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="Common Use Cases">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        Text="Left-Click an icon to show a notification."
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="5"
                        Text="Right-Click an icon to show a context menu."
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="5"
                        Text="Double-Click an icon to show/hide this window."
                        TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="Edge Cases &amp; Patterns">
                <StackPanel>
                    <CheckBox
                        x:Name="HideOnCloseCheckBox"
                        Margin="5"
                        IsChecked="True">
                        <TextBlock Text="Hide Window on Close (Tray Icon Pattern)" TextWrapping="Wrap" />
                    </CheckBox>
                    <CheckBox
                        x:Name="EnableHoverCheckBox"
                        Margin="5"
                        IsChecked="True">
                        <TextBlock Text="Enable Hover Content" TextWrapping="Wrap" />
                    </CheckBox>
                    <Button
                        Margin="5"
                        Padding="5"
                        Click="ShowBalloonClick"
                        Content="Show Explicit Balloon (Win7 Style)" />
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,10,0,0" Header="Dynamic Icon (Zero-Alloc)">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        FontSize="11"
                        Foreground="Gray"
                        Text="Mocks CPU usage with raw pixel rendering."
                        TextWrapping="Wrap" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Margin="5"
                            Padding="5"
                            Click="StartCpuMockClick"
                            Content="Start Mock" />
                        <Button
                            Grid.Column="1"
                            Margin="5"
                            Padding="5"
                            Click="StopCpuMockClick"
                            Content="Stop Mock" />
                    </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!--  Right Panel: Log Viewer  -->
        <GroupBox Grid.Column="1" Header="Event Log">
            <ListView
                x:Name="LogListView"
                BorderBrush="LightGray"
                BorderThickness="1"
                ItemsSource="{Binding LogMessages}" />
        </GroupBox>
    </Grid>
</Window>